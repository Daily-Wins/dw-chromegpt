{
  "manifest_version": 3,
  "name": "AI Form Filler MVP",
  "version": "2.0.0",
  "description": "Fyll i formul√§r automatiskt med AI - Modular Architecture",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["src/content-bundle.js"],
    "css": ["styles.css"],
    "all_frames": true
  }],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  }
}
